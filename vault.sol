            _stakedToken,
            _rewardToken,
            _rewardPerBlock,
            _startBlock,
            _bonusEndBlock,
            _vaultLimitPerUser,
            _admin,
            _depositFee,
            _feeToAddress
        );

        emit NewVault(vaultAddress);
    }
